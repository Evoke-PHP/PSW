                 <div class="humidity"><?= $measurement['humidity'] ?>%</div>
                 <div class="description"><?= $measurement['description'] ?></div>

             </div>

            <div class="comments"><?= count($measurement['comments']) ?> comments</div>
        </main>
    </body>
</html>
