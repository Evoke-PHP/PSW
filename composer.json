{
    "name": "evoke-php/PSW",
    "description": "An example weather application using the Slim Framework",
    "keywords": ["slim", "rest", "example"],
    "homepage": "http://github.com/evoke-php/PSW",
    "license": "MIT",
    "authors": [
        {
            "name": "Paul Young",
            "email": "evoke@youngish.org",
            "homepage": "http://youngish.org/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "slim/csrf": "^0.8.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "PSW\\": "src/",
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit"
	}

}
